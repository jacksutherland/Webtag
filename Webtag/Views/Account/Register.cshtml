@using Webtag.Models
@model LoginVM

<div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
        <div class="box">
            <h2 class="text-center">Sign up for My<span class="green-text">Web</span>Tag today</h2>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.TextBoxFor(m => m.Email, new { @class = "full-width", placeholder = "Email address" })
                @Html.ValidationMessageFor(m => m.Email)
                @Html.PasswordFor(m => m.Password, new { @class = "full-width", placeholder = "Password" })
                @Html.ValidationMessageFor(m => m.Password)
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "full-width", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                <div>
                    <button>Register</button>
                </div>
            }
            <div class="margin-top small-text">
                By signing up, you agree to the Terms of Service and Privacy Policy, including Cookie Use.                </small>
            </div>
        </div>
    </div>
</div>
